<?xml version="1.0" encoding="utf-8"?>
<style xmlns="http://purl.org/net/xbiblio/csl" class="note" version="1.0">
  <info>
    <title>FOM – Chicago-Style mit Kurzbeleg in der Fußnote</title>
    <id>http://www.zotero.org/styles/fom-chicago-kurzbeleg</id>
    <link href="http://www.zotero.org/styles/chicago-fullnote-bibliography" rel="self"/>
    <author>
      <name>OpenAI (angepasst für FOM)</name>
    </author>
    <updated>2025-05-24T00:00:00+00:00</updated>
    <category citation-format="note"/>
    <category field="generic-base"/>
    <summary>FOM-konformer Zitierstil: Kurzbeleg in der Fußnote, Vollbeleg im Literaturverzeichnis.</summary>
    <language>de-DE</language>
  </info>

  <macro name="author">
    <names variable="author">
      <name form="short" initialize-with="." delimiter=", "/>
    </names>
  </macro>

  <macro name="title">
    <text variable="title" font-style="italic"/>
  </macro>

  <macro name="issued">
    <date variable="issued">
      <date-part name="year"/>
    </date>
  </macro>

  <citation>
    <layout prefix="Vgl. " suffix="." delimiter=", ">
      <text macro="author"/>
      <text macro="title"/>
      <text macro="issued"/>
      <text variable="page" prefix="S. "/>
    </layout>
  </citation>

  <bibliography>
    <sort>
      <key variable="author"/>
      <key variable="issued"/>
    </sort>
    <layout suffix=".">
      <text macro="author" suffix=" "/>
      <text macro="title" suffix=". "/>
      <text macro="issued" prefix="(" suffix="): "/>
      <text variable="publisher-place" suffix=": "/>
      <text variable="publisher"/>
    </layout>
  </bibliography>
</style>
